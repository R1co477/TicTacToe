<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:centerX="0.35"
                android:centerColor="#d9534f"
                android:startColor="#c9302c"
                android:endColor="#ff6f61"
                android:type="linear" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:centerX="0.35"
                android:centerColor="#f57b63"
                android:startColor="#f04f7c"
                android:endColor="#fbb350"
                android:type="linear" />
        </shape>
    </item>
</selector>
