<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <gradient
                android:angle="45"
                android:centerX="0.35"
                android:centerColor="#ff8c66"
                android:startColor="#ffa500"
                android:endColor="#ff4500"
                android:type="linear" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <gradient
                android:angle="45"
                android:centerX="0.35"
                android:centerColor="#f87a66"
                android:startColor="#f79e3b"
                android:endColor="#f85691"
                android:type="linear" />
        </shape>
    </item>
</selector>
