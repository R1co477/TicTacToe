<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <gradient
                android:angle="45"
                android:centerX="0.35"
                android:centerColor="#24a0ec"
                android:startColor="#28bab8"
                android:endColor="#2bd979"

                android:type="linear" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <gradient
                android:angle="45"
                android:centerX="0.35"
                android:centerColor="#28bab8"
                android:startColor="#24a0ec"
                android:endColor="#2bd979"
                android:type="linear" />
        </shape>
    </item>
</selector>
