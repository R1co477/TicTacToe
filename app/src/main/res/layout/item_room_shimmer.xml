<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <View
        android:id="@+id/iv_avatar_shimmer"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tv_game_shimmer"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toStartOf="@id/btn_play_shimmer"
        app:layout_constraintStart_toEndOf="@id/iv_avatar_shimmer"
        app:layout_constraintTop_toTopOf="@id/iv_avatar_shimmer" />

    <View
        android:id="@+id/tv_nickname_shimmer"

        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar_shimmer"
        app:layout_constraintEnd_toStartOf="@id/btn_play_shimmer"
        app:layout_constraintStart_toEndOf="@id/iv_avatar_shimmer" />

    <View
        android:id="@+id/btn_play_shimmer"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar_shimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_avatar_shimmer" />

</androidx.constraintlayout.widget.ConstraintLayout>
